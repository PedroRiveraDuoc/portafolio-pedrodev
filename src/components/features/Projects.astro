---
import GitHub from "@/components/icons/GitHub.astro";
import Tailwind from "@/components/icons/Tailwind.astro";
import Link from "@/components/icons/Link.astro";
import LinkButton from "@/components/common/LinkButton.astro";
import Angular from "@/components/icons/Angular.astro";
import Spring from "@/components/icons/Spring.astro";

const TAGS = {
  ANGULAR: {
    name: "Angular",
    class: "bg-red-700 text-white",
    icon: Angular,
  },
  SPRING: {
    name: "Spring Boot",
    class: "bg-green-700 text-white",
    icon: Spring,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "Desarrollo Web - Landing Page para Psicólogo",
    description:
      "Landing page moderna y responsiva para promover servicios psicológicos. Construida con Astro, Tailwind CSS y animaciones AOS para una experiencia fluida y profesional.",
    tags: [TAGS.SPRING],
    image: "/ps-viviana.webp",
    link: "https://ps-viviana.vercel.app/",
    github: "https://github.com/PedroRiveraDuoc/ps.viviana",
  },
  {
    title: "Desarrollo Frontend con Angular",
    description:
      "Construcción de interfaces dinámicas y modernas utilizando Angular, TypeScript, y gestión de estado con NgRx. Implementación de diseño responsive con Bootstrap y Tailwind CSS.",
    tags: [TAGS.ANGULAR, TAGS.TAILWIND],
    image: "/angular.webp",
    link: "#",
    github: "#",
  },
];
---

<div class="flex flex-col gap-y-16 pb-12 md:pb-16 lg:pb-24"
  data-aos="fade-up"
>
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={title}
              src={image}
              loading="lazy"
              class="w-full h-60 sm:h-72 md:h-80 lg:h-80 object-contain object-center rounded-xl bg-white p-4"
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
